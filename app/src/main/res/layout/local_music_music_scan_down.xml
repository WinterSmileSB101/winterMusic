<?xml version="1.0" encoding="utf-8"?>
<!--扫描音乐完成布局文件-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/close_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/lay_protype_btn_close"
        android:layout_gravity="end"/>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="40dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/local_scan_mobile"
        android:layout_centerInParent="true"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/local_scan_ok"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
</RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="共扫描到"/>
        <TextView
            android:id="@+id/MusicScan_AllMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0首"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="歌曲，新增"/>
        <TextView
            android:id="@+id/MusicScan_NewMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0首"
            android:textColor="@color/colorAccent"/>
    </LinearLayout>
    <Button
        android:id="@+id/ReturnMusic_btn"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="#CC0033"
        android:textColor="#FFFFFF"
        android:text="回到我的音乐"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/get_All_albm_lrc"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:background="@drawable/button_grayborder_writebackground"
        android:textColor="#000000"
        android:text="一键获取封面歌词"
        android:textSize="18dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"/>
</LinearLayout>
