<?xml version="1.0" encoding="utf-8"?>
<!--播放列表条目的布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:orientation="vertical"
              android:id="@+id/PlayList_Item_ContenLayout"
              android:paddingTop="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/PlayList_Item_IsPlay"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:visibility="gone"
            android:src="@mipmap/song_play_icon"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/PlayList_Item_MusicName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/PlayList_Item_IsPlay"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            />
        <TextView
            android:id="@+id/PlayList_Item__"
            android:text=" - "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_toRightOf="@+id/PlayList_Item_MusicName"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/PlayList_Item_Artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#C0C0C0"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/PlayList_Item__"
            />
        <!--音乐来源按钮-->
        <ImageView
            android:id="@+id/PlayList_Item_WhereCome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/PlayList_Item_Delete"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/play_playlist_icn_link"
            android:visibility="gone"/>
        <!--删除按钮-->
        <ImageView
            android:id="@+id/PlayList_Item_Delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/play_playlist_icn_delete"
            android:layout_marginEnd="10dp"/>
    </RelativeLayout>
    <include layout="@layout/item_decoration_layout"/>
</LinearLayout>
