<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/Notifition_Content"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="65dp">
<ImageView
    android:id="@+id/Notifition_MusicImage"
    android:layout_width="65dp"
    android:layout_height="match_parent"
    android:src="@mipmap/default_play_window_image"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"/>
    <RelativeLayout
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_toRightOf="@+id/Notifition_MusicImage"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        <TextView
            android:id="@+id/Notifition_MusicName"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="14dp"
            android:layout_alignParentTop="true"
            android:maxLength="30"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/Notifition_MusicArtist"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:textSize="12dp"
            android:textColor="@color/colorPrimarySliver"
            android:layout_alignParentBottom="true"
            android:maxLength="30"
            android:maxLines="1"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp">
        <ImageView
            android:id="@+id/Notifition_MusicPlayBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/note_btn_pause_white"
            android:layout_centerVertical="true"/>
        <ImageView
            android:id="@+id/Notifition_MusicNextBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/note_btn_next_white"
            android:layout_toRightOf="@+id/Notifition_MusicPlayBtn"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/Notifition_MusicLrcBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/note_btn_lyc_white"
            android:layout_toRightOf="@+id/Notifition_MusicNextBtn"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/Notifition_MusicCancelBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/note_btn_close_white"
            android:layout_toRightOf="@+id/Notifition_MusicLrcBtn"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
</RelativeLayout>
