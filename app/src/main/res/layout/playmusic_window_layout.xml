<?xml version="1.0" encoding="utf-8"?>
<!--音乐播放窗口布局-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/playmusic_window_Content"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
    android:background="@mipmap/default_play_window_image">
    <!--播放主面板的菜单布局-->
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/playmusic_window_Menu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
        android:translationZ="2dp">
        <ImageView
            android:id="@+id/playmusic_window_BackBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/actionbar_back"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/playmusic_window_BackBtn"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true">
            <TextView
                android:id="@+id/playmusic_windowF_MusicName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/playmusic_windowF_ArtistName"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorSliver"
                android:textSize="14dp"
                android:layout_alignParentBottom="true"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/playmusic_windowF_ShareBtn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/actionbar_share"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFFFFF"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--机械手臂-->
        <ImageView
            android:id="@+id/playmusic_window_Needle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/play_needle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-15dp"
            android:translationZ="1dp"
            />
        <RelativeLayout
            android:id="@+id/playmusic_window_MusicImage_zontainer"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="65dp"
            android:translationZ="0dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/play_disc"/>
            <view.RoundImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/diskbackground"
                android:translationZ="-1dp"
                />
            <!--音乐专辑图片-->
            <view.RoundImageView
                android:id="@+id/playmusic_window_MusicImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/default_play_window_image"/>
        </RelativeLayout>

        <!--收藏以及下载等按钮-->
        <RelativeLayout
            android:id="@+id/playmusic_windowdld_zontainer"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/playmusic_window_playTimer_container"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/playmusic_window_LoveBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@mipmap/play_rdi_icn_loved_prs"/>
            <ImageView
                android:id="@+id/playmusic_window_dldBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/play_icn_dld"
                android:layout_centerHorizontal="true"/>
            <!--更多按钮按下-->
            <ImageView
                android:id="@+id/playmusic_window_moreBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/play_icn_more_prs"/>
        </RelativeLayout>

        <!--播放时间面板-->
        <RelativeLayout
            android:id="@+id/playmusic_window_playTimer_container"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/playmusic_window_playbar_container"
            >
            <!--当前播放进度-->
            <TextView
                android:id="@+id/playmusic_window_ProgressCurrcent"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:textColor="#CFCFCF"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"/>
            <!--进度条-->
            <SeekBar
                android:id="@+id/playmusic_window_SeekBar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:maxHeight="4.0dip"
                android:minHeight="4.0dip"
                android:paddingLeft="16.0dip"
                android:paddingRight="16.0dip"
                android:progressDrawable="@drawable/playmusic_window_seekbar"
                android:thumb="@drawable/seekbarthumb"
                android:layout_centerInParent="true"/>
            <!--最大进度-->
            <TextView
                android:id="@+id/playmusic_window_ProgressMax"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:textColor="#CFCFCF"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
        <!--底部播放控制栏-->
        <RelativeLayout
            android:id="@+id/playmusic_window_playbar_container"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true">
            <!--循环方式按钮-->
            <ImageView
                android:id="@+id/playmusic_window_LoopWayBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/play_icn_loop"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"/>
            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">
                <!--上一曲-->
                <ImageView
                    android:id="@+id/playmusic_window_PlayPreMusicBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/play_btn_prev_xml"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <!--播放或者暂停按钮-->
                <ImageView
                    android:id="@+id/playmusic_window_PlayMusicBtn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/play_btn_play_xml"
                    android:layout_centerInParent="true"/>
                <!--下一曲-->
                <ImageView
                    android:id="@+id/playmusic_window_PlayNextMusicBtn"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/play_btn_next_xml"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"/>
            </RelativeLayout>
            <!--播放列表按钮-->
            <ImageView
                android:id="@+id/playmusic_window_PlayMusicListBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/play_icn_src"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
